# setproxy 函数（需配合 ~/.setproxy/setproxy.sh）

SETPROXY_BIN="${HOME}/.setproxy/setproxy.sh"
if [ ! -x "$SETPROXY_BIN" ]; then
  # 兜底：尝试使用项目内脚本
  SETPROXY_BIN="$(dirname "${BASH_SOURCE[0]}")/../setproxy.sh"
fi

setproxy() {
  bash "$SETPROXY_BIN" "$@"
}

proxy-on() {
  bash "$SETPROXY_BIN" on "$@"
}

proxy-off() {
  bash "$SETPROXY_BIN" off "$@"
}

proxy-status() {
  bash "$SETPROXY_BIN" status "$@"
}

proxy-test() {
  bash "$SETPROXY_BIN" test "$@"
}

# 兼容下划线写法
alias proxy_on=proxy-on
alias proxy_off=proxy-off
alias proxy_status=proxy-status
alias proxy_test=proxy-test
